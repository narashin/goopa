{
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": [
        "airbnb-typescript",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "project": "./tsconfig.json",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "react/no-unescaped-entities": "off"  // 'react/no-unescaped-entities' 규칙을 비활성화
    }
}